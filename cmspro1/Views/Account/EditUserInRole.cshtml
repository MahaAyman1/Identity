@model List<cmspro1.Models.ViewModel.UserRoleViewModel>

@{
    ViewData["Title"] = "EditUserInRole";
}

<h1>Edit User In Role</h1>

<form asp-action="EditUserInRole" asp-controller="Account" method="post">
    <div class="card">
        <div class="card-header">
            Add or Remove Users
        </div>

        <div class="card-body">
            @for (int  i = 0; i < Model.Count; i++)
            {
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input type="hidden" asp-for="@Model[i].UserName" />

                <div class="">
                    <input  asp-for="@Model[i].IsSelected"  class="form-check-input"/>
                    <label asp-for="@Model[i].IsSelected"> @Model[i].UserName</label>
                   
                </div>
                <br />
            }
        </div>

        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-success" />
            <a asp-action="RolesList" asp-controller="Account" class="btn btn-warning">Cancel</a>
        </div>
    </div>
</form>
