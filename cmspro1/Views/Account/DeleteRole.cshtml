@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Delete Role";
}

<h1>Delete Role</h1>

<h3>Are you sure you want to delete this role <span class="text-danger "> @Model.Name </span>  ?</h3>

<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>Role ID</dt>
        <dd>@Model.Id</dd>

        <dt>Role Name</dt>
        <dd>@Model.Name</dd>
    </dl> 

    <form asp-action="DeleteRolee">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a asp-action="RolesList" class="btn btn-secondary">Cancel</a>
    </form>
</div>
